<div class="panel panel-default">
    <div class="panel-heading">
        <%= t '.title' %>
    </div>

    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>     
            <br>
        <% end %>
    </div>
</div>

<%= form_for(@message, html: { class: "form-horizontal" }) do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                    <li>
                        <%= full_message %>
                    </li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="form-group">
        <%= f.label :name, class: "control-label col-xs-2" %>
        <div class="col-xs-10">
            <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :body, class: "control-label col-xs-2" %>
        <div class="col-xs-10">
            <%= f.text_area :body, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
            <%= f.submit class: "btn btn-sm btn-primary" %>
        </div>
    </div>
<% end %>
